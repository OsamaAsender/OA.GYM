                    </div>
                    <div class="form-group">
                        <label asp-for="StartTime" class="control-label"></label>
                        <input asp-for="StartTime" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CoachId" class="control-label"></label>
                        <select asp-for="CoachId" class="form-control" asp-items="@Model.CoachesList"></select>
                        <span asp-validation-for="CoachId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TraineeIds" class="control-label"></label>
                        <select asp-for="TraineeIds" class="form-control" asp-items="@Model.TraineesList"></select>
                    </div>

                    <!-- btn styling div --!>
                                <div class="my-3">
                                <div class="form-group CU-inlineDisplay">
                                    <input type="submit" value="Create" class="btn CU-CreateBtnClass">
                                </div>
                                <div class="CU-inlineDisplay">
                                    <a class="btn CU-CreateBtnClass2" asp-action="Index">Back to List</a>
                                </div>
                                </div>

                            </form>
                        </div>
                    </div>
                    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
                    }
