@using OA.GYM.Web.Models.TrainingClasses
@model TrainingClassesViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="container CU-classlistmargin">
    <div class="CU-classlistmargin container">
        <h1>Create</h1>

        <h4>TrainingClass</h4>
        <hr>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ClassTypeId" class="control-label"></label>
                        <select asp-for="ClassTypeId" class="form-control" asp-items="@Model.ClassTypeList"></select>
                        <span asp-validation-for="ClassTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
